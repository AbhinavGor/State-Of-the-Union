<div id="dashboard" class="container-fluid ml-auto">
  <h1 class="mt-4">Dashboard</h1>
<p >Welcome <%= user.name %></p>
<% if(!user.submitted){ %>
<form action = "/submit" method="POST">
  <div class="form-group">
    <label class="col-form-label col-form-label-lg" for="inputLarge">Article Title</label>
    <input class="form-control form-control-lg" type="text" placeholder="Article Title" name = "atitle" value = "<%= typeof atitle != 'undefined' ? atitle : '' %>" id="inputLarge">
  </div>
  
  <div class="form-group">
    <label for="exampleTextarea"></label>
    <textarea class="form-control" id="exampleTextarea" rows="3"  placeholder="Content Here" name = "acontent" value = "<%= typeof acontent != 'undefined' ? acontent : '' %>"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  </form>
<% }%>

<% if(user.submitted){%>
  <div class="alert alert-danger">
    <h3><i class="fas fa-exclamation-triangle"></i> Delete existing speech to submit another.</h3>
  </div>
  <form action='/delete' method='POST'>
    <button type="submit" class="btn btn-danger">Delete Existing Speech </button>
  </form>
  
<%}%>
</div>




